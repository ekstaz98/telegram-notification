{
    "name": "telegram-notifications",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "cross-env NODE_ENV=development nest start --watch --exec \"node -r source-map-support/register\"",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "lint:ts": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "release": "standard-version --commit-all",
        "first-release": "standard-version --commit-all --first-release",
        "migrate:up": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run -t=each",
        "migrate:down": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:revert -t=each",
        "migrate:generate": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:generate -n"
    },
    "dependencies": {
        "@gitbeaker/node": "^35.6.0",
        "@nestjs/common": "^7.0.0",
        "@nestjs/config": "^0.5.0",
        "@nestjs/core": "^7.0.0",
        "@nestjs/graphql": "^7.10.6",
        "@nestjs/jwt": "^7.2.0",
        "@nestjs/microservices": "^7.0.0",
        "@nestjs/passport": "^7.1.5",
        "@nestjs/platform-express": "^7.0.0",
        "@nestjs/schedule": "^1.0.2",
        "@nestjs/typeorm": "^7.1.5",
        "bignumber.js": "^9.0.1",
        "cache-manager": "^3.4.4",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "cross-env": "^7.0.3",
        "node-telegram-bot-api": "^0.53.0",
        "pg": "^8.6.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.3.0",
        "typeorm": "^0.2.34",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@graphql-inspector/cli": "^2.6.1",
        "@nestjs/cli": "^7.6.0",
        "@nestjs/schematics": "^7.3.1",
        "@nestjs/testing": "^7.6.18",
        "@types/cache-manager": "^3.4.2",
        "@types/cron": "^1.7.3",
        "@types/express": "^4.17.12",
        "@types/jest": "^26.0.23",
        "@types/node": "^15.12.2",
        "@types/node-telegram-bot-api": "^0.51.4",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^4.27.0",
        "@typescript-eslint/parser": "^4.27.0",
        "conventional-changelog-cli": "^2.1.1",
        "eslint": "^7.28.0",
        "eslint-config-airbnb-typescript": "^12.3.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-tsc": "^2.0.0",
        "husky": "^4.3.8",
        "jest": "^27.0.4",
        "prettier": "^2.3.1",
        "pretty-quick": "^3.1.1",
        "recursive-copy-cli": "^1.0.20",
        "source-map-support": "^0.5.19",
        "standard-version": "^9.3.0",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.3.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^src/(.+)$": "<rootDir>/$1"
        }
    },
    "standard-version": {
        "scripts": {
            "postchangelog": "./.changelog-graphql-diffs.sh"
        }
    }
}
